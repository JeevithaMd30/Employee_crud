 @model CRUD_with_SP.Models.EmpModel
<body>
    <h3> Employee Data BY ID </h3>
    <div class="container mt-5">
        <form action="/Employee/UpdateEmployee" method="post" class="mt-3">
            <div class="form-group pt-2">
                <label for="Id">Id</label>
                <input asp-for="Id" class="form-control w-25" value="@Model.Id" />
            </div>
            <div class="form-group pt-2">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control w-25" value="@Model.Name" />
            </div>
            <div class="form-group pt-2">
                <label for="Email">Email</label>
                <input asp-for="Email" class="form-control w-25" value="@Model.Email" />
            </div>
            <div class="form-group pt-2">
                <label for="Dob">Date of Birth</label>
                <input asp-for="Dob" class="form-control w-25" value="@Model.Dob.ToString("yyyy-MM-dd")" type="date" />

            </div>
            <div class="form-group pt-2">
                <label for="country">Country</label>
                <input asp-for="country" class="form-control w-25" value="@Model.country" />
            </div>
            <div class="form-group pt-2">
                <label for="Salary">Salary</label>
                <input asp-for="Salary" class="form-control w-25" value="@Model.Salary" />
            </div>
            <div class="form-group pt-2"> 
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
        </form>
    </div>
   </body>
